<root main_tree_to_execute="FirsrBehaviorTree">

    <BehaviorTree ID="FirsrBehaviorTree">
        <ReactiveSequence>

            <!-- Searchs the object -->
            <RetryUntilSuccesful num_attempts="100">
                <Fallback>
                    <DetectObject name="detect_object" object="{object}"/>
                    <Inverter>
                        <Turn name="Turn"/>
                    </Inverter>
                </Fallback>
            </RetryUntilSuccesful>


            <!-- Goes to the object -->
            <ReactiveSequence>
                <CalculateDistance name="calculate_distance" object="{object}"/>
                <ApproachObject name="approach" object="{object}"/>
                
                <!-- If something is near the robot turns -->
                <ReactiveFallback>
                    <Inverter>
                        <IsSomethingNear name="is_something_near"/>
                    </Inverter>
                <!--    <GoBack name="go_back"\> -->
                    <Turn name="Turn"/>
                </ReactiveFallback>
                
            </ReactiveSequence>
        </ReactiveSequence>
    </BehaviorTree>

</root>

